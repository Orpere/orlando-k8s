kind: ServiceAccount
metadata:
  name: {{user}}
  namespace: {{namespace}}
  
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: {{user}}
roleRef:            
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ClusterRoleName}}
subjects:
- kind: ServiceAccount
  name: {{user}}
  namespace: {{namespace}}